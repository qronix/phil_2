<div id='addRolePanel'>
    <div id='newRoleNameContainer'>
        <label for="roleName">Rolename:</label>
        <input type="text" id='roleName'>
    </div>
    <div class="editRolePanel" id='rolePermissions'>
         {{#each this.permissions as |value|}}
            {{#notInitValue @key '$init' value}}
            {{/notInitValue}}
        {{/each}}
    </div>
    <div id='addRolePanelButtons'>
        <button id='cancel' class="button" onclick="cancelNewRole(event,this)">Cancel</button>
        <button id='submit' class="button" onclick="submitNewRole(event,this)">Save</button>
    </div>
</div>